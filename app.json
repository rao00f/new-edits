{
  "expo": {
    "name": "Mi3AD",
    "slug": "mi3ad-event-booking",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mi3ad",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mi3ad.eventbooking",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to show nearby events",
        "NSCameraUsageDescription": "This app uses camera to scan QR codes for event check-in"
      }
    },
    "android": {
      "package": "com.mi3ad.eventbooking",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-location",
      "expo-camera"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
